#ALIAS
alias ll="ls -alh"
export XDG_CONFIG_HOME="$HOME/.config"
export EDITOR=nvim
export PATH="$HOME/mpvpaper/build:$PATH"
export PATH=$PATH:/usr/local/go/bin
export PATH=$PATH:$HOME/go/bin
export PATH="$HOME/.cargo/bin:$PATH"
source /usr/share/nvm/init-nvm.sh

export TERM=xterm-256color
export PHPBREW_SET_PROMPT=1
export PHPBREW_RC_ENABLE=1
export UID=$(id -u)
export GID=$(id -g)

#xhost +SI:localuser:root

export PATH=$HOME/.local/bin:$PATH

export BAT_THEME="Dracula"

export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
alias ai="tgpt"

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

export PATH="/opt/winbox/:$PATH"
alias winbox="wine /opt/winbox/winbox64.exe"
alias nv="cd $2 && nvim ."
alias nano="nvim"
alias vim="nvim"
alias nvim="nvim"
export CHROME_EXECUTABLE=/usr/bin/chromium
export ANDROID_HOME=$HOME/Android/Sdk

eval "$(pyenv init - zsh)"
export PATH=/opt/vscode/bin:$PATH
eval "$(rbenv init -)"

# bun completions
[ -s "/home/syafiq/.bun/_bun" ] && source "/home/syafiq/.bun/_bun"

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"
export QT_QPA_PLATFORM=wayland
export MOZ_ENABLE_WAYLAND=1
export PATH=$HOME/.config/composer/vendor/bin:$PATH
export JAVA_HOME=/usr/lib/jvm/default
export PATH=$JAVA_HOME/bin:$PATH
export PATH=$HOME/flutter/bin:$PATH
export PATH=$ANDROID_HOME/cmdline-tools/latest/bin:$PATH
export PATH=/home/syafiq/bin:$PATH
export PATH=$HOME/.pub-cache/bin:$PATH
export PATH=$ANDROID_HOME/platform-tools:$PATH
export PATH=$HOME/.config/emacs/bin:$PATH
export DOCKER_HOST=unix:///run/user/1000/docker.sock
[[ -e ~/.phpbrew/bashrc ]] && source ~/.phpbrew/bashrc

